# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# For more information: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Default indentation: use tabs with visual width 4
indent_style = tab
indent_size = 4
	
# PHP and PHP templates follow project style (tabs)
[*.php]
indent_style = tab
indent_size = 4

[*.phtml]
indent_style = tab
indent_size = 4

# YAML (GitHub Actions, etc.)
[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

# JSON (composer.json, etc.)
[*.json]
indent_style = space
indent_size = 2

# XML (meta.xml and others)
[*.xml]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Markdown: keep intentional trailing spaces (line breaks)
[*.md]
trim_trailing_whitespace = false

# Makefiles require tabs
[Makefile]
indent_style = tab
